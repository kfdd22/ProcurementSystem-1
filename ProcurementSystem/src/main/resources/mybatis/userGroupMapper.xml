<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ProcurementSystem.dao.IBuyerUserGroupDao">
	
	<select id="getUserGroupDetail" parameterType="map" resultType="com.ProcurementSystem.entity.UserGroup">
		select * from user_organize 
		where name = '${name}'
	</select>

	<insert id="createNewUserGroup" parameterType="com.ProcurementSystem.entity.UserGroup" useGeneratedKeys="true">
		insert into user_organize(unique_name, description, name, difiner)
		values(#{uniqueName}, #{description}, #{name}, #{difiner})
	</insert>
	
	<select id="getUserGroups" parameterType="map" resultType="com.ProcurementSystem.entity.UserGroup">
		select * from user_organize 
		where 1=1
		<if test="name!='' and name!=null">
			and name like concat("%",#{name},"%")
		</if>
		<if test="description!='' and description!=null">
			and description like concat("%",#{description},"%")
		</if>
	</select>
</mapper>